citHeader("To cite eyetools in publications use:")

title <- "{eyetools}: Tools for eye data analysis"
url   <- "https://tombeesley.github.io/eyetools/"
year  <- sub("-.*", "", meta$Date)
note  <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Manual",
  title = title,
  author = c(person("Tom", "Beesley"), person("Matthew", "Ivory")),
  year = year,
  note = note,
  url = url,
  textVersion = paste0(
    "Tom Beesley and Matthew Ivory, (", year, "). ", title, ". ", note, ". ", url
  )
)
